yay -S pico-tts alsa-utils
consider speech-dispatcher later

echo 172 | pico-tts -l de-DE | aplay --rate=16000 --channels=1 --format=S16_LE
echo 172 | pico-tts -l de-DE | aplay -q -f S16_LE -r 16
echo 172 | pico-tts -l de-DE | paplay -p --format=s16le --rate=16000
echo 172 | pico-tts -l de-DE > /tmp/number-trainer.wav; paplay -p --format=s16le --rate=16000 /tmp/number-trainer.wav; rm /tmp/number-trainer.wav

